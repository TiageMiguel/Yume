{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "outDir": "./build",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "build",
    "node_modules",
  ]
}
